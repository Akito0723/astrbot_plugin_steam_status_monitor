{
  "steam_api_key": {
    "description": "Steam Web API Key",
    "type": "string",
    "hint": "请在 https://steamcommunity.com/dev/apikey 获取"
  },
  "steam_ids": {
    "description": "要监控的SteamID列表",
    "type": "list",
    "hint": "输入需要监控的玩家SteamID（64位），可填写多个"
  },
  "poll_interval_sec": {
    "description": "轮询间隔（秒）",
    "type": "int",
    "hint": "每隔多少秒查询一次Steam状态",
    "default": 60
  },
  "retry_times": {
    "description": "Steam API请求重试次数",
    "type": "int",
    "hint": "每次请求失败后最多重试几次",
    "default": 3
  },
  "notify_sessions": {
    "description": "需要通知的session列表",
    "type": "list",
    "hint": "不建议手动配置，通过在对应会话中 /steam on|/steam off 管理"
  }
}
